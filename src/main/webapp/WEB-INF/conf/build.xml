<project name="testproject" default="install" basedir=".">

	<property name="solr.home" location="" />

	<property name="servlet.context" location="../.." />
	
	<target name="install">

		<echo>Installing into: ${solr.home}</echo>

		<!-- 
		  copy a resource to the solr config directory, we use url because
		  the war could be exploded or in War
	    -->
		<copy failonerror="true" todir="${solr.home}" verbose="true" flatten="true">
			<url url="${servlet.context}/WEB-INF/conf/solr/solr.xml"/>
		</copy>
	    
		<copy todir="${solr.home}/statistics/conf" verbose="true" flatten="true">
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/schema.xml" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/solrconfig.xml" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/admin-extra.html" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/elevate.xml" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/protwords.txt" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/scripts.conf" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/spellings.txt" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/stopwords.txt" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/synonyms.txt" />
		</copy>

		<copy todir="${solr.home}/statistics/conf/xslt" verbose="true" flatten="true">
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/xslt/example_atom.xsl" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/xslt/example_rss.xsl" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/xslt/example.xsl" />
			<url url="${servlet.context}/WEB-INF/conf/solr/statistics/conf/xslt/luke.xsl" />
		</copy>

	</target>

</project>